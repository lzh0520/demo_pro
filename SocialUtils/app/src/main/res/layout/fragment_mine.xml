<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.doit.activity.socialutils.view.CircleImageView
        android:id="@+id/img_Head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/default_bg"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.doit.activity.socialutils.view.WebImageView
            android:id="@+id/img_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/default_bg"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_wxLgoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/login_by_weixin"
            android:gravity="center_horizontal"
            android:text="微信登录" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnUpload"
        android:text="上传" />

    <LinearLayout
        android:id="@+id/linear_webview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_inedit"
            style="@android:style/Theme.Holo.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:textColor="@color/black"
                android:textColorHint="@color/bottom_text_sel"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</LinearLayout>